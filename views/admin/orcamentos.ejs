  <script>
    function atualizarValorTotal() {
      let totalEquipamentos = 0;

      document.querySelectorAll('.row.equipamento-item').forEach(row => {
        const qtdInput = row.querySelector('input[name$=".quantidade"]');
        const valorInput = row.querySelector('input[name$=".valorUnitario"]');

        const quantidade = parseFloat(qtdInput?.value) || 0;
        const valorUnitario = parseFloat(valorInput?.value) || 0;

        totalEquipamentos += quantidade * valorUnitario;
      });

      // Valor do serviço selecionado
      const servicoSelect = document.getElementById('servico_id');
      const servicoSelecionado = servicoSelect?.selectedOptions[0];
      const valorServico = parseFloat(servicoSelecionado?.dataset.valor) || 0;

      // Valor do desconto
      const descontoInput = document.getElementById('desconto');
      const descontoPercentual = parseFloat(descontoInput?.value) || 0;

      // Total bruto (sem desconto)
      const totalBruto = totalEquipamentos + valorServico;

      // Valor com desconto
      const valorDesconto = totalBruto * (descontoPercentual / 100);
      const totalComDesconto = totalBruto - valorDesconto;

      // Atualiza os campos
      document.getElementById('valor_total').value = totalBruto.toFixed(2);
      document.getElementById('valor_total_desconto').value = totalComDesconto.toFixed(2);
    }

    document.getElementById('desconto').addEventListener('input', atualizarValorTotal);

    const equipamentos = <%- JSON.stringify(equipamentos) %>;
    let equipamentoIndex = 0;

    document.getElementById('addEquipamento').addEventListener('click', function () {
      const container = document.getElementById('equipamentosContainer');

      const selectId = `equipamento_id_${equipamentoIndex}`;
      const valorInputId = `valor_unitario_${equipamentoIndex}`;
      const estoqueId = `estoque_${equipamentoIndex}`;

      const div = document.createElement('div');
      div.className = 'row mb-2 align-items-end equipamento-item';
      div.innerHTML = `
        <div class="col-md-4">
          <label class="form-label">Equipamento</label>
          <select class="form-select equipamento-select" 
            name="equipamentos[${equipamentoIndex}].equipamentoId" 
            id="${selectId}" 
            data-valor-id="${valorInputId}" 
            data-estoque-id="${estoqueId}">
            <option value="">Selecione</option>
            ${equipamentos.map(eq => 
              `<option value="${eq.id}" data-valor="${eq.valor}" data-estoque="${eq.quantidade_estoque}">
                ${eq.nome} - ${eq.marca} - ${eq.modelo}
              </option>`
            ).join('')}
          </select>
        </div>
        <div class="col-md-2">
          <label class="form-label">Qtd. Estoque</label>
          <input type="number" class="form-control" id="${estoqueId}" disabled>
        </div>
        <div class="col-md-2">
          <label class="form-label">Quantidade</label>
          <input type="number" name="equipamentos[${equipamentoIndex}].quantidade" class="form-control" min="1" value="1">
        </div>
        <div class="col-md-3">
          <label class="form-label">Valor Unitário (R$)</label>
          <input type="number" name="equipamentos[${equipamentoIndex}].valorUnitario" class="form-control" id="${valorInputId}" step="0.01" readonly>
        </div>
        <div class="col-md-1 text-end">
          <button type="button" class="btn btn-danger btnRemoverEquipamento">&times;</button>
        </div>
      `;

      container.appendChild(div);
      atualizarValorTotal();
      equipamentoIndex++;
    });

    // Atualiza automaticamente valor unitário e total ao trocar o equipamento
    document.addEventListener('change', function (e) {
      if (e.target.classList.contains('equipamento-select')) {
        const selectedOption = e.target.selectedOptions[0];
        const valor = selectedOption.getAttribute('data-valor');
        const estoque = selectedOption.getAttribute('data-estoque');

        const valorInputId = e.target.getAttribute('data-valor-id');
        const estoqueId = e.target.getAttribute('data-estoque-id');

        document.getElementById(valorInputId).value = valor || '';
        document.getElementById(estoqueId).value = estoque || '';

        atualizarValorTotal();
      }
    });

    // Remover equipamento e atualizar total
    document.addEventListener('click', function (e) {
      if (e.target.classList.contains('btnRemoverEquipamento')) {
        e.target.closest('.row').remove();
        atualizarValorTotal();
      }
    });

    // Atualizar total ao mudar o serviço
    document.getElementById('servico_id').addEventListener('change', atualizarValorTotal);

    // Atualizar total ao mudar quantidade de equipamentos
    document.addEventListener('input', function (e) {
      if (e.target.name && e.target.name.includes('.quantidade')) {
        atualizarValorTotal();
      }
    });
  </script>


